<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BackgroundImageVisibility">
        <item name="android:visibility">visible</item>
    </style>

    <style name="ToolbarImage">
        <item name="android:layout_width">704dp</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
        <item name="android:paddingBottom">@dimen/detail_metabar_title_bottom_padding</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/detail_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ToolbarLinearLayoutGravity">
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>